# =========================================================
# Rajneeti RAG â€” Environment Configuration
# Copy this file to .env and fill in your values.
# =========================================================

# --- Environment ---
APP_ENV="local"                     # "local" | "aws"

# --- LLM Provider Selection ---
LLM_PROVIDER="gemini"               # "gemini" | "groq" | "ollama"

# --- Gemini API ---
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL_NAME="gemini-2.0-flash"

# --- Groq API ---
GROQ_API_KEY="your-groq-api-key"
GROQ_MODEL_NAME="openai/gpt-oss-120b"

# --- Ollama (local only) ---
OLLAMA_BASE_URL="http://localhost:11434"
LLM_MODEL_NAME="llama3.2"

# --- Feature Flags ---
ENABLE_GRAPH_RAG=false
ENABLE_VECTOR_RAG=true

# --- Neo4j Aura (required if ENABLE_GRAPH_RAG=true) ---
NEO4J_URI="neo4j+s://your-aura-instance.databases.neo4j.io"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="your-neo4j-password"
NEO4J_DATABASE="neo4j"

# --- Embedding & Reranking ---
EMBEDDING_MODEL_NAME="google/embeddinggemma-300m"
RERANKING_MODEL_NAME="cross-encoder/ms-marco-MiniLM-L-6-v2"

# --- Retrieval Settings ---
TOP_K_RETRIEVAL=7
TOP_K_RERANK=5

# --- Data Paths (override for custom locations) ---
# RAW_DATA_DIR=/data/raw_data
# VECTOR_DB_DIR=/data/vector_db
